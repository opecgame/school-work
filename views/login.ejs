<!DOCTYPE html>
<html lang="en">

<head>
    <title>OpecZ & Chenchoy | Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link rel="stylesheet" type="text/css" href="css/cookie.css">
</head>

<body>
    <div class="container-login" style="background-image: url('images/bg-login.jpg');">
        <div class="wrap-login p-l-55 p-r-55 p-t-20 p-b-30">
            <center>
                <img style="text-align: center;" class="p-b-15" src="./images/pkwlogo.png" height="90px"></img>
            </center>
            <form id="ff" class="login-form validate-form">
                <span class="login-form-title p-b-37">
                    PHUKETWITTAYALAI<br>Login System
                </span>

                <div class="wrap-input validate-input m-b-25" data-validate="กรุณาใส่เลขประจำตัวนักเรียน">
                    <input class="input" type="number" id="password" placeholder="เลขประจำตัวนักเรียน" required>
                    <span class="focus-input"></span>
                </div>

                <div class="container-login-form-btn">
                    <button class="login-form-btn">
                        เข้าสู่ระบบ
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor/animsition/js/animsition.min.js"></script>
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>
    <script src="vendor/countdowntime/countdowntime.js"></script>
    <script src="js/main.js"></script>
    <script src="http://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $("#ff").submit(function (event) {
            event.preventDefault();
            let password = document.getElementById("password").value;
            let settings = {
                "url": "/apiV1/loginAPI",
                "method": "post",
                "timeout": 0,
                "async": true,
                "crossDomain": true,
                "headers": {
                    "Content-Type": "application/json",
                },
                "data": JSON.stringify({
                    "id": password,
                }),
            };
            $.ajax(settings).done(function (response) {
                if (response.status == true) {
                    Swal.fire({
                        "title": "สำเร็จ",
                        "text": response.msg
                    }).then(() => window.location.replace(`/game`))
                } else return Swal.fire({
                    "title": "ผิดพลาด",
                    "text": response.msg
                })
            });
        });
    </script>
</body>

</html>